<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"


        android:layout_height="match_parent">

        <Button
        android:id="@+id/btnDetail_call"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        android:onClick="Call"
        android:background="@drawable/casl"/>


        <Button
            android:id="@+id/btnDetail_direction"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:onClick="direction"
            android:background="@drawable/mapss" />

        <Button
            android:id="@+id/btnDetail_hourlyRate"
            android:layout_width="50dp"
            android:onClick="GoToBook"
            android:layout_height="50dp"
           android:layout_marginLeft="15dp"
            android:background="@drawable/book"/>

    </LinearLayout>

</android.support.v7.widget.CardView>